<%- include('partials/header') %>

<div class="container">
  <div class="centered-div">

    <form action="/qr" method="post">
      <div class="wave-group">
        <input required="" name="text" type="text" class="input">
        <span class="bar"></span>
        <label class="label">
          <span class="label-char" style="--index: 0">T</span>
          <span class="label-char" style="--index: 1">E</span>
          <span class="label-char" style="--index: 2">X</span>
          <span class="label-char" style="--index: 3">T</span>
        </label>
      </div>

      <button class="btn" type="submit"> Covert </button>
    </form>

    <img src="data:image/png;base64,<%= locals.image %>" alt="qr-code" />
    <br>
    <button type="button" id="play">Sacn QR</button>
    <video id="qr-video" width="300" height="300"></video>
    <p id="res"></p>
  </div>
</div>


<%- include('sacn.ejs') %>

